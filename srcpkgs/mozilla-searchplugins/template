}
do_install() {
	for d in searx duckduckgo-{html,lite} internet-archive parabola-{packages,wiki} yacy; do
		vinstall "${FILESDIR}/$d.json" 644 "usr/share/mozilla/searchplugins/$d/manifest.json"
		vinstall "${FILESDIR}/$d.ico"  644 "usr/share/mozilla/searchplugins/$d/favicon.ico"
	done
}
