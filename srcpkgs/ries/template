post_extract() {
	ln -sv -T ries.c.txt ries.c
	#mv -v ries.c.txt ries.c
}

do_build() {
	echo cc ${CFLAGS} ${LDFLAGS} -ories ries.c -lm
	cc ${CFLAGS} ${LDFLAGS} -ories ries.c -lm
}

do_install() {
	vinstall ries 755 usr/bin
}

post_install() {
	vmkdir usr/share/doc/ries
	vinstall COPYING.txt 644 usr/share/doc/ries
	vinstall ries-manual.txt 644 usr/share/doc/ries
}
