#make_dirs="/var/log/${pkgname} 0700 ${system_accounts} ${system_accounts}"

post_install() {
	vconf matterircd.toml.example matterircd.toml
	vsconf matterircd.toml.example
	vlicense LICENSE
	vsv matterircd
}

