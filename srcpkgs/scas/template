# Template file for 'scas'
pkgname=scas
version=0.4.6
revision=1
build_style=cmake
configure_args="-DSCAS_DOCUMENTATION=ON"
hostmakedepends="asciidoc"
makedepends=""
depends=""
short_desc="SirCmpwn's assembler (and linker)"
maintainer="PoroCYon <porocyon@titandemo.org>"
license="custom"
homepage="https://github.com/KnightOS/$pkgname"
distfiles="$homepage/archive/$version.tar.gz"
checksum=ead83fed4df0df485ab3c2dd6297d07f59296bd4602474ae081dbc021c218c61

post_install() {
	vlicense LICENSE

	mkdir -vp "$DESTDIR/usr/share/doc/scas"
	vcopy doc/* "usr/share/doc/scas"
}

scas-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
	}
}

