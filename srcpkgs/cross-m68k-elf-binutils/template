# Template file for 'cross-m68k-elf-binutils'
_triplet=m68k-elf
_pkgname=binutils
pkgname=cross-$_triplet-$_pkgname
version=2.34
revision=1
wrksrc=$_pkgname-$version
build_style=gnu-configure
configure_args="--disable-nls --enable-deterministic-archives --enable-ld
 --enable-plugins --host=$XBPS_CROSS_TRIPLET --prefix=/usr --target=$_triplet
 --with-gnu-as --with-gnu-ld --with-sysroot=/usr/$_triplet --with-system-zlib
 --without-isl --enable-multilib
"
hostmakedepends="autoconf automake bison flex perl texinfo"
makedepends="zlib-devel"
depends="binutils-doc"
short_desc="GNU binary utilities (Motorola 68k target)"
maintainer="PoroCYon <porocyon@titandemo.org>"
license="GPL-3.0-or-later"
homepage="https://www.gnu.org/software/${_pkgname}/"
distfiles="${GNU_SITE}/${_pkgname}/${_pkgname}-${version}.tar.xz"
checksum=f00b0e8803dc9bab1e2165bd568528135be734df3fabf8d0161828cd56028952
nocross=yes

post_install() {
	rm -fr ${DESTDIR}/usr/share/info
}
