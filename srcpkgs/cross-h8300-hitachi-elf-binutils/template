# Template file for 'cross-h8300-hitachi-elf-binutils'
_triplet=h8300-hitachi-elf
_pkgname=binutils
pkgname=cross-$_triplet-$_pkgname
version=2.36.1
revision=1
wrksrc="${_pkgname}-${version}"
build_style=gnu-configure
configure_args="
 --disable-nls
 --enable-deterministic-archives
 --enable-ld
 --enable-multilib
 --enable-plugins
 --host=${XBPS_CROSS_TRIPLET}
 --prefix=/usr
 --target=${_triplet}
 --with-gnu-as
 --with-gnu-ld
 --with-sysroot=/usr/${_triplet}
 --with-system-zlib
 --without-isl
"
hostmakedepends="autoconf automake bison flex perl"
makedepends="zlib-devel"
depends="binutils-doc"
short_desc="GNU binary utilities ($_triplet target)"
maintainer="PoroCYon <porocyon@titandemo.org>"
license="GPL-3.0-or-later"
homepage="https://www.gnu.org/software/${_pkgname}/"
distfiles="${GNU_SITE}/${_pkgname}/${_pkgname}-${version}.tar.xz"
checksum=e81d9edf373f193af428a0f256674aea62a9d74dfe93f65192d4eae030b0f3b0
nocross=yes

post_install() {
	rm -fr ${DESTDIR}/usr/share/info
}
