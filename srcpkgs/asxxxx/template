as8008s as8051 as89lp as8xcxxx ascheck asf2mc8 asgb aslink aspic asscmp asst7
asxcnv asz280 asz80"

do_install() {
	for x in $_as_binaries; do
		vbin "$_builddir/$x"
	done

	for x in asmlnk.pdf asmlnk.txt changes.txt readme.txt Asxxxx_for_Android.pdf; do
		vdoc "asxv${_ver_major}pxx/asxdoc/$x"
	done

	for x in asxv${_ver_major}pxx/asxhtml/*; do
		vdoc "$x"
	done

	vlicense asxv${_ver_major}pxx/gpl3.txt
}
